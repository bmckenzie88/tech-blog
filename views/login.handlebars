<div class="card m-3">

  <div class="card-header">
    <h2>Login</h2>
  </div>

  <form id="login-form" class="card-body">
    <div class="form-group">
      <div class="form-outline mb-4">
        <label for="username-login">Username</label>
        <input type="text" id="username-login" class="form-control" />
      </div>
    </div>
    <div class="form-group">
      <div class="form-outline mb-4">
        <label for="password-login">Password</label>
        <input type="password" id="password-login" class="form-control" />
      </div>
    </div>
    <button type="submit" id="login-btn" class="btn button btn-primary">Log in</button>
    <a class="btn btn-primary" href="/signup" role="button">Signup Instead</a>
  </form>

</div>

<script src="/js/login.js"></script>