<header>
    <div>
        <h1>Your Dashbord</h1>
    </div>
</header>

<div class="container">

    <div class="d-grid gap-3" id="post-details">

        {{#each posts}}
        {{> my-post-preview }}
        {{/each}}
    </div>
</div>

<div class="card m-3">

  <div class="card-header">
    <h2>New Post</h2>
  </div>

  <form id="new-post-form" class="card-body">
    <div class="form-group">
      <div class="form-outline mb-4">
        <label for="post-title">Title</label>
        <input type="text" class="post-title form-control" />
      </div>
    </div>
    <div class="form-group">
      <div class="form-outline mb-4">
        <label for="post-body">Body</label>
        <textarea id="post-body" rows="3" class="post-body form-control" /></textarea>
      </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit Post</button>
  </form>
</div>

