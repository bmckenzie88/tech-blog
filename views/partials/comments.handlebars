<ul class="list-group list-group-flush" id="comment-details">
  {{#each post.comments}}
    <div class="card-body">
      <blockquote class="blockquote mb-0">
        <p>{{body}}</p>
        <footer class="blockquote-footer">{{user.username}}
          on
          {{createdAt}}</footer>
      </blockquote>
    </div>
  {{/each}}
</ul>